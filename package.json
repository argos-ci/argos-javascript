{
  "private": true,
  "type": "module",
  "devDependencies": {
    "@rollup/plugin-json": "^6.1.0",
    "@rollup/plugin-swc": "^0.3.0",
    "@rollup/plugin-typescript": "^11.1.6",
    "@swc/core": "^1.4.17",
    "cross-env": "^7.0.3",
    "eslint": "^8.57.0",
    "lerna": "^8.1.2",
    "prettier": "^3.2.5",
    "rollup": "^4.17.2",
    "rollup-plugin-swc3": "^0.11.1",
    "rollup-plugin-ts": "^3.4.5",
    "typedoc": "^0.25.13",
    "typescript": "^5.4.5",
    "vitest": "^1.6.0"
  },
  "scripts": {
    "build": "pnpm run -r prebuild && cross-env NODE_ENV=production pnpm -r run build",
    "build-docs": "cross-env typedoc",
    "format": "prettier --write .",
    "check-format": "prettier --check .",
    "lint": "eslint .",
    "check-types": "tsc --noEmit",
    "test": "vitest",
    "release": "npm run build && lerna publish --conventional-commits --create-release=github",
    "release-canary": "npm run build && lerna publish --canary --dist-tag canary"
  },
  "engines": {
    "node": ">=18",
    "pnpm": ">=9"
  }
}
