{
  "exclude": ["node_modules/**"],
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@argos-ci/*": ["packages/*/src"]
    },
    "module": "ESNext",
    "moduleResolution": "node",
    "target": "ES2021",
    "importHelpers": true,
    "declaration": true,
    "sourceMap": true,
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "allowSyntheticDefaultImports": true,
    "noEmit": true,
    "skipLibCheck": true
  }
}
