{
  "name": "@argos-ci/gitlab",
  "description": "GitLab utilities for visual testing with Argos.",
  "version": "0.2.4",
  "author": "Smooth Code",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/argos-ci/argos-javascript.git",
    "directory": "packages/gitlab"
  },
  "homepage": "https://argos-ci.com/docs/gitlab",
  "bugs": {
    "url": "https://github.com/argos-ci/argos-javascript/issues"
  },
  "keywords": [
    "gitlab",
    "argos",
    "testing",
    "visual testing",
    "regression",
    "visual regression"
  ],
  "publishConfig": {
    "access": "public"
  },
  "type": "module",
  "bin": {
    "argos-gitlab": "./bin/argos-gitlab.js"
  },
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "default": "./dist/index.js"
    },
    "./package.json": "./package.json"
  },
  "types": "./dist/index.d.ts",
  "engines": {
    "node": ">=18.0.0"
  },
  "scripts": {
    "build": "tsup",
    "check-types": "tsc",
    "check-format": "prettier --check --ignore-unknown --ignore-path=../../.gitignore --ignore-path=../../.prettierignore .",
    "lint": "eslint ."
  },
  "dependencies": {
    "@argos-ci/api-client": "workspace:*",
    "@gitbeaker/rest": "^42.2.0",
    "commander": "^13.1.0"
  },
  "devDependencies": {
    "@types/node": "^18.19.44"
  }
}
