{
  "name": "@argos-ci/core",
  "description": "Node.js SDK for visual testing with Argos.",
  "version": "4.4.0",
  "type": "module",
  "main": "./dist/index.cjs",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs",
      "default": "./dist/index.cjs"
    },
    "./package.json": "./package.json"
  },
  "types": "./dist/index.d.ts",
  "repository": {
    "type": "git",
    "url": "https://github.com/argos-ci/argos-javascript.git",
    "directory": "packages/core"
  },
  "homepage": "https://argos-ci.com/docs/node-sdk",
  "bugs": {
    "url": "https://github.com/argos-ci/argos-javascript/issues"
  },
  "engines": {
    "node": ">=20.0.0"
  },
  "license": "MIT",
  "keywords": [
    "sdk",
    "node",
    "argos",
    "testing",
    "visual testing",
    "regression",
    "visual regression"
  ],
  "publishConfig": {
    "access": "public"
  },
  "dependencies": {
    "@argos-ci/api-client": "workspace:*",
    "@argos-ci/util": "workspace:*",
    "convict": "^6.2.4",
    "debug": "^4.4.3",
    "fast-glob": "^3.3.3",
    "mime-types": "^3.0.1",
    "sharp": "^0.34.4",
    "tmp": "^0.2.5"
  },
  "devDependencies": {
    "@octokit/webhooks": "^14.1.3",
    "@types/convict": "^6.1.6",
    "@types/debug": "^4.1.12",
    "@types/mime-types": "^3.0.1",
    "@types/tmp": "^0.2.6",
    "@vercel/repository-dispatch": "^0.1.0",
    "msw": "^2.11.6",
    "vitest": "catalog:"
  },
  "scripts": {
    "build": "tsup && cp ./src/index.cjs ./dist",
    "e2e": "node ./e2e/upload.cjs && node ./e2e/upload.mjs",
    "check-types": "tsc",
    "check-format": "prettier --check --ignore-unknown --ignore-path=../../.gitignore --ignore-path=../../.prettierignore .",
    "lint": "eslint .",
    "test": "vitest"
  }
}
