{
  "name": "@argos-ci/core",
  "description": "Visual testing solution to avoid visual regression. The core component of Argos SDK that handles build creation.",
  "version": "2.4.1",
  "type": "module",
  "main": "./dist/index.cjs",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "require": "./dist/index.cjs",
      "import": "./dist/index.mjs",
      "default": "./dist/index.mjs"
    },
    "./package.json": "./package.json"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/argos-ci/argos-javascript.git",
    "directory": "packages/core"
  },
  "homepage": "https://github.com/argos-ci/argos-javascript/tree/main/packages/core#readme",
  "bugs": {
    "url": "https://github.com/argos-ci/argos-javascript/issues"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "license": "MIT",
  "keywords": [
    "argos",
    "automation",
    "test automation",
    "testing",
    "visual testing",
    "regression",
    "visual regression"
  ],
  "publishConfig": {
    "access": "public"
  },
  "dependencies": {
    "@argos-ci/util": "workspace:*",
    "axios": "^1.7.4",
    "convict": "^6.2.4",
    "debug": "^4.3.4",
    "fast-glob": "^3.3.2",
    "sharp": "^0.33.3",
    "tmp": "^0.2.3"
  },
  "devDependencies": {
    "@types/convict": "^6.1.6",
    "@types/debug": "^4.1.12",
    "@types/tmp": "^0.2.6",
    "msw": "^2.2.13"
  },
  "scripts": {
    "prebuild": "rm -rf dist",
    "build": "rollup -c",
    "e2e": "node ./e2e/upload.cjs && node ./e2e/upload.mjs"
  }
}
